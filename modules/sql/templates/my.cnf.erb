[mysqld]
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
user=mysql
symbolic-links=0
server-id                 = <%= @serverid %>
gtid-mode                 = on
log-bin                   = <%= @fqdn %>
log-slave-updates
enforce-gtid-consistency  = true

[mysqld_safe]
log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid

[mysql]
user = root
